{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "jhooq-pod-with-pvc",
    "labels": {
      "name": "jhooq-pod-with-pvc"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "jhooq-pod-with-pvc",
        "image": "rahulwagh17/kubernetes:jhooq-k8s-springboot",
        "ports": [
          {
            "containerPort": 8080,
            "name": "www"
          }
        ],
        "volumeMounts": [
          {
            "name": "www-persistent-storage",
            "mountPath": "/home/vagrant/storage"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "www-persistent-storage",
        "persistentVolumeClaim": {
          "claimName": "jhooq-pvc"
        }
      }
    ]
  }
}